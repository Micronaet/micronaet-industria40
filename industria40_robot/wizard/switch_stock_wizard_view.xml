                   <group colspan="4" col="4">
                       <field name="mode" />
                       <newline/>

                       <field name="current_material_id" on_change="onchange_current_material_id(current_material_id)"/>
                       <field name="new_material_id" />
                   </group>
                </form>
            </field>
       </record>

